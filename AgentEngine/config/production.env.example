# Production Environment Configuration
# Copy this file to production.env and fill in your values

# GCP Configuration
AGENT_PROJECT_ID=your-project-id-production
AGENT_LOCATION=asia-northeast3

# Agent Configuration
AGENT_MODEL=gemini-2.5-pro
AGENT_TEMPERATURE=0.5
AGENT_MAX_TOKENS=4096
AGENT_DISPLAY_NAME=pydantic-ai-agent
AGENT_DESCRIPTION=Pydantic AI Agent (Production)

# System Prompt
AGENT_SYSTEM_PROMPT=You are a helpful AI assistant. Provide accurate, helpful, and safe responses.
# Or use a file: AGENT_SYSTEM_PROMPT_FILE=/path/to/prompt.txt

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Session Configuration
SESSION_ENABLED=true
SESSION_BACKEND=vertex_ai
SESSION_TTL_SECONDS=86400  # 24 hours
SESSION_MAX_EVENTS=1000
SESSION_AGENT_ENGINE_ID=projects/xxx/locations/xxx/agentEngines/xxx

# Memory Configuration
MEMORY_ENABLED=true
MEMORY_BACKEND=vertex_ai
MEMORY_AUTO_GENERATE=true
MEMORY_MAX_PER_USER=1000
MEMORY_SIMILARITY_THRESHOLD=0.7
MEMORY_AGENT_ENGINE_ID=projects/xxx/locations/xxx/agentEngines/xxx

# Observability
TRACING_ENABLED=true
LOGGING_ENABLED=true
METRICS_ENABLED=true
TRACE_SAMPLE_RATE=0.1  # 10% sampling in production

# Deployment
DEPLOY_ENV=production
DEPLOY_MIN_INSTANCES=2
DEPLOY_MAX_INSTANCES=100

# Security
# VPC_SC_PERIMETER=your-vpc-sc-perimeter
# CMEK_KEY=projects/xxx/locations/xxx/keyRings/xxx/cryptoKeys/xxx
