# Staging Environment Configuration
# Copy this file to staging.env and fill in your values

# GCP Configuration
AGENT_PROJECT_ID=your-project-id-staging
AGENT_LOCATION=asia-northeast3

# Agent Configuration
AGENT_MODEL=gemini-2.5-flash
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=4096
AGENT_DISPLAY_NAME=pydantic-ai-agent-staging
AGENT_DESCRIPTION=Pydantic AI Agent (Staging)

# System Prompt
AGENT_SYSTEM_PROMPT=You are a helpful AI assistant in the staging environment. Be concise and helpful.
# Or use a file: AGENT_SYSTEM_PROMPT_FILE=/path/to/prompt.txt

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Session Configuration
SESSION_ENABLED=true
SESSION_BACKEND=in_memory  # Use in_memory for staging, vertex_ai for production
SESSION_TTL_SECONDS=3600
SESSION_MAX_EVENTS=500
# SESSION_AGENT_ENGINE_ID=projects/xxx/locations/xxx/agentEngines/xxx

# Memory Configuration
MEMORY_ENABLED=true
MEMORY_BACKEND=in_memory  # Use in_memory for staging, vertex_ai for production
MEMORY_AUTO_GENERATE=true
MEMORY_MAX_PER_USER=100
MEMORY_SIMILARITY_THRESHOLD=0.7
# MEMORY_AGENT_ENGINE_ID=projects/xxx/locations/xxx/agentEngines/xxx

# Observability
TRACING_ENABLED=true
LOGGING_ENABLED=true
METRICS_ENABLED=true
TRACE_SAMPLE_RATE=1.0  # 100% sampling in staging

# Deployment
DEPLOY_ENV=staging
DEPLOY_MIN_INSTANCES=1
DEPLOY_MAX_INSTANCES=10
